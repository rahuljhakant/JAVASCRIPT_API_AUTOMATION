# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=https://gorest.co.in/public-api/
BASE_URL=https://gorest.co.in/public-api/

# API Authentication Tokens (use any one)
API_TOKEN=your_api_token_here
GOREST_API_TOKEN=your_gorest_api_token_here
BEARER_TOKEN=your_bearer_token_here

# Environment Configuration
NODE_ENV=development
ENVIRONMENT=development

# Test Configuration
TEST_TIMEOUT=5000
TEST_RETRIES=3
TEST_PARALLEL=true
TEST_MAX_CONCURRENCY=5

# Database Configuration (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=api_automation
DB_USER=api_user
DB_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Reporting
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# CI/CD
CI_ENVIRONMENT=development
CI_BUILD_NUMBER=1
